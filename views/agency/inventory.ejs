<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background: linear-gradient(45deg, #3498db, #2980b9);
            color: white;
            font-weight: bold;
        }
        .badge {
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Inventory Details</h2>
        <% if(!agency.isInventorySetup) {%>
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div>
              <a href="/agency/<%= id %>/setup-inventory" class="btn btn-primary me-2">
                  Setup Inventory
              </a>
          </div>
        </div>
        <% } else{%>
        <div class="card">
            <div class="card-header">Inventory Information</div>
            <div class="card-body">
                <!-- Agency and Capacities -->
                <div class="row mb-3">
                    <div class="col-md-3">
                        <h5>Total Capacity:</h5>
                        <span class="badge bg-primary"><%= inventory.totalCapacity %></span>
                    </div>
                    <div class="col-md-3">
                        <h5>Current Capacity:</h5>
                        <span class="badge bg-success"><%= inventory.currentCapacity %></span>
                    </div>
                </div>

                <!-- Capacities Progress -->
                <% if (usagePercentage == 0) { %>
                  <!-- No Load Available (Gray) -->
                  <div class="progress" role="progressbar" aria-label="No Load Available" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-secondary text-dark" id="progressBar" data-usage="<%= usagePercentage %>">
                      <%= usagePercentage %>% Load Available
                    </div>
                  </div>
                <% } else if (usagePercentage > 0 && usagePercentage <= 25) { %>
                  <!-- Success (Green) -->
                  <div class="progress" role="progressbar" aria-label="Success example" aria-valuenow="<%= usagePercentage %>" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-success text-dark" id="progressBar" data-usage="<%= usagePercentage %>">
                      <%= usagePercentage %>% Used
                    </div>
                  </div>
                <% } else if (usagePercentage > 25 && usagePercentage <= 50) { %>
                  <!-- Info (Blue) -->
                  <div class="progress" role="progressbar" aria-label="Info example" aria-valuenow="<%= usagePercentage %>" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-info text-dark" id="progressBar" data-usage="<%= usagePercentage %>">
                      <%= usagePercentage %>% Used
                    </div>
                  </div>
                <% } else if (usagePercentage > 50 && usagePercentage <= 75) { %>
                  <!-- Warning (Yellow) -->
                  <div class="progress" role="progressbar" aria-label="Warning example" aria-valuenow="<%= usagePercentage %>" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-warning text-dark" id="progressBar" data-usage="<%= usagePercentage %>">
                      <%= usagePercentage %>% Used
                    </div>
                  </div>
                <% } else if (usagePercentage > 75 && usagePercentage <= 100) { %>
                  <!-- Danger (Red) -->
                  <div class="progress" role="progressbar" aria-label="Danger example" aria-valuenow="<%= usagePercentage %>" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-danger" id="progressBar" data-usage="<%= usagePercentage %>">
                      <%= usagePercentage %>% Used
                    </div>
                  </div>
                <% } else { %>
                  <!-- Invalid value -->
                  <div class="alert alert-danger" role="alert">
                    Invalid usage percentage: <%= usagePercentage %>. Please check the data.
                  </div>
                <% } %>

                <h4 class="mt-2">Waste Breakdown</h4>
                <ul class="list-group mb-3">
                    <% Object.keys(inventory.wasteBreakdown).forEach(item => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <%= item %>
                            <span class="badge bg-secondary"><%= inventory.wasteBreakdown[item] %> units</span>
                        </li>
                    <% }); %>
                </ul>

                <!-- Location Details -->
                <h5 class="mt-3">Location:</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Address:</strong> <%= inventory.location.address %></p>
                        <p><strong>City:</strong> <%= inventory.location.city %></p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>State:</strong> <%= inventory.location.state %></p>
                        <p><strong>Postal Code:</strong> <%= inventory.location.postalCode %></p>
                    </div>
                </div>

                <!-- Last Updated -->
                <h5 class="mt-3">Last Updated:</h5>
                <p><%= new Date(inventory.lastUpdated).toLocaleString() %></p>
            </div>
        </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Select all progress bars with the 'progress-bar' class
        const progressBars = document.querySelectorAll('.progress-bar');

        // Loop through each progress bar to set the width based on the 'data-usage' attribute
        progressBars.forEach(progressBar => {
            const usagePercentage = progressBar.dataset.usage;
            // const usagePercentage = 0;

            progressBar.style.width = `${usagePercentage}%`;
        });
    </script>
</body>
</html>
