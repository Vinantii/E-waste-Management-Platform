<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Afacad:ital,wght@0,400..700;1,400..700&family=Anek+Latin:wght@100..800&family=Manrope:wght@200..800&family=Michroma&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/styles/agency/inventory.css">
</head>
<body>
  <div class="background">
    <img src="/images/logo.png" alt="logo" id="logo">
    <div class="container">
        <h2 class="inventory-title">Inventory Details</h2>
        
        <% if(!agency.isInventorySetup) { %>
            <div class="setup-section">
                <a href="/agency/<%= id %>/setup-inventory" class="btn btn-primary">Setup Inventory</a>
            </div>
        <% } else { %>
            <h3 class="inventory-heading">Inventory Information</h3>
            
            <div class="capacity-section">
                <div class="capacity-item">
                    <span class="capacity-label">Total Capacity:</span>
                    <span class="capacity-value total-capacity"><%= inventory.totalCapacity %></span>
                </div>
                <div class="capacity-item">
                    <span class="capacity-label">Current Capacity:</span>
                    <span class="capacity-value current-capacity"><%= inventory.currentCapacity %></span>
                </div>
            </div>

            <div class="waste-breakdown">
                <h3>Waste Breakdown</h3>
                <% Object.entries(inventory.wasteBreakdown).forEach(([type, units]) => { %>
                    <div class="waste-item">
                        <span class="waste-name"><%= type %></span>
                        <span class="waste-units"><%= units %> units</span>
                    </div>
                <% }); %>
            </div>

            <div class="location-section">
                <div class="location-item">
                    <span class="location-label">Address:</span>
                    <span class="location-value"><%= inventory.location.address %></span>
                </div>
                <div class="location-item">
                    <span class="location-label">State:</span>
                    <span class="location-value"><%= inventory.location.state %></span>
                </div>
                <div class="location-item">
                    <span class="location-label">City:</span>
                    <span class="location-value"><%= inventory.location.city %></span>
                </div>
                <div class="location-item">
                    <span class="location-label">Postal Code:</span>
                    <span class="location-value"><%= inventory.location.postalCode %></span>
                </div>
            </div>

            <div class="last-updated">
                <span class="last-updated-label">Last Updated:</span>
                <%= new Date(inventory.lastUpdated).toLocaleString() %>
            </div>
        <% } %>
    </div>
  </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Select all progress bars with the 'progress-bar' class
        const progressBars = document.querySelectorAll('.progress-bar');

        // Loop through each progress bar to set the width based on the 'data-usage' attribute
        progressBars.forEach(progressBar => {
            const usagePercentage = progressBar.dataset.usage;
            // const usagePercentage = 0;

            progressBar.style.width = `${usagePercentage}%`;
        });
    </script>
</body>
</html>
