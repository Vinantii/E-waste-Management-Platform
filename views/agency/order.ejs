<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agency Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            margin-top: 50px;
        }
        .card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .form-control, .form-select {
            border-radius: 8px;
        }
        .preview-img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mb-4">Received Orders</h2>
        
        <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addProductModal">Add Product</button>
        
        <div class="row">
            <% allOrders.forEach(order => { %>
                <div class="col-md-4 mb-4">
                    <div class="card p-3">
                        <h5>Order ID: <%= order._id %></h5>
                        <p>Product: <%= order.product.name %></p>
                        <p>User: <%= order.user.name %></p>
                        <p>Status: <%= order.status %></p>
                        <p class="text-muted">Created At: <%= order.createdAt.toDateString() %></p>
                        <form action="/agency/order/<%= order._id %>/update-status" method="POST">
                            <select name="status">
                              <option value="Shipped">Ship</option>
                              <option value="Delivered">Deliver</option>
                            </select>
                            <button type="submit">Update</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Add Product Modal -->
    <div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addProductModalLabel">Add New Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/agency/<%= agency._id %>/add-product" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name" class="form-label">Product Name*</label>
                            <input type="text" class="form-control" id="name" name="product[name]" required minlength="3">
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="product[description]" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Product Image</label>
                            <input type="file" class="form-control" id="image" name="image" accept="image/*" required onchange="previewImage(event)">
                            <img id="preview" class="preview-img mt-3">
                        </div>
                        <div class="mb-3">
                            <label for="pointsRequired" class="form-label">Points Required*</label>
                            <input type="number" class="form-control" id="pointsRequired" name="product[pointsRequired]" required min="1">
                        </div>
                        <div class="mb-3">
                            <label for="stock" class="form-label">Stock Available*</label>
                            <input type="number" class="form-control" id="stock" name="product[stock]" required min="1">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Add Product</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function previewImage(event) {
            const preview = document.getElementById('preview');
            preview.src = URL.createObjectURL(event.target.files[0]);
            preview.style.display = "block";
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
