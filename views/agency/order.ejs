<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agency Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container { margin-top: 50px; }
        .card { border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); }
        .form-control, .form-select { border-radius: 8px; }
        .preview-img { max-width: 100%; height: auto; border-radius: 10px; display: none; }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mb-4">Agency Orders & Products</h2>
        
        <!-- Tabs Navigation -->
        <ul class="nav nav-tabs" id="orderTabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" id="received-tab" data-bs-toggle="tab" data-bs-target="#received" type="button" role="tab">Received Orders</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button" role="tab">Completed Orders</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="products-tab" data-bs-toggle="tab" data-bs-target="#products" type="button" role="tab">Products List</button>
            </li>
        </ul>

        <!-- Tabs Content -->
        <div class="tab-content mt-3" id="orderTabsContent">
            <!-- Received Orders -->
            <div class="tab-pane fade show active" id="received" role="tabpanel">
                <div class="row">
                    <% receivedOrders.forEach(order => { %>
                        <div class="col-md-4 mb-4">
                            <div class="card p-3">
                                <h5>Order ID: <%= order._id %></h5>
                                <p>Product: <%= order.product.name %></p>
                                <p>User: <%= order.user.name %></p>
                                <p>Status: <%= order.status %></p>
                                <p class="text-muted">Created At: <%= order.createdAt.toDateString() %></p>
                                <form action="/agency/order/<%= order._id %>/update-status" method="POST">
                                    <select name="status" class="form-select mb-2">
                                        <option value="Shipped">Ship</option>
                                        <option value="Delivered">Deliver</option>
                                    </select>
                                    <button type="submit" class="btn btn-primary w-100">Update</button>
                                </form>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>

            <!-- Completed Orders -->
            <div class="tab-pane fade" id="completed" role="tabpanel">
                <div class="row">
                    <% completedOrders.forEach(order => { %>
                        <div class="col-md-4 mb-4">
                            <div class="card p-3">
                                <h5>Order ID: <%= order._id %></h5>
                                <p>Product: <%= order.product.name %></p>
                                <p>User: <%= order.user.name %></p>
                                <p>Status: <span class="badge bg-success"><%= order.status %></span></p>
                                <p class="text-muted">
                                    Delivered On:
                                    <% if (order.updatedAt) { %>
                                        <%= new Date(order.updatedAt).toDateString() %>
                                    <% } else { %>
                                        Not Available
                                    <% } %>
                                </p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>

            <!-- Product List -->
            <div class="tab-pane fade" id="products" role="tabpanel">
                <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addProductModal">Add Product</button>
                <div class="row">
                    <% allProducts.forEach(product => { %>
                        <div class="col-md-4 mb-4">
                            <div class="card p-3">
                                <img src="<%= product.image.url %>" class="img-fluid mb-2" alt="<%= product.name %>">
                                <h5><%= product.name %></h5>
                                <p><%= product.description %></p>
                                <p>Points Required: <%= product.pointsRequired %></p>
                                <p>Stock Available: <strong><%= product.stock %></strong></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Product Modal -->
    <div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addProductModalLabel">Add New Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/agency/<%= agency._id %>/add-product" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name" class="form-label">Product Name*</label>
                            <input type="text" class="form-control" id="name" name="product[name]" required minlength="3">
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="product[description]" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Product Image</label>
                            <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
                        </div>
                        <div class="mb-3">
                            <label for="pointsRequired" class="form-label">Points Required*</label>
                            <input type="number" class="form-control" id="pointsRequired" name="product[pointsRequired]" required min="1">
                        </div>
                        <div class="mb-3">
                            <label for="stock" class="form-label">Stock Available*</label>
                            <input type="number" class="form-control" id="stock" name="product[stock]" required min="1">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Add Product</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
