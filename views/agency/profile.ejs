<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agency Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Afacad:ital,wght@0,400..700;1,400..700&family=Anek+Latin:wght@100..800&family=Manrope:wght@200..800&family=Michroma&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/styles/agency/profile.css">
</head>
<body>
    <div class="background">
        <img src="/images/logo.png" alt="logo" id="logo">
    <div class="profile-container">
        <h2>Agency Profile</h2>

        
                <!-- Logo Section -->
                <div class="col-md-5 text-center">
                    <img src="<%= agency.logo.url %>" class="rounded-circle mb-3" alt="Agency Logo" style="width: 150px; height: 150px;">
                </div>

                <!-- Agency Details -->
                <div class="col-md-8 details">
                    <p><strong>Name:</strong> <%= agency.name %></p>
                    <p><strong>Description:</strong><%= agency.description %></p>
                    <p><strong>Agency Type:</strong> <%= agency.agencyType.join(', ') %></p>
                    <p><strong>Working Hours:</strong> <%= agency.workingHours %></p>
                    <p><strong>Certification:</strong> <%= agency.certificationStatus %></p>
                    <p><strong>Waste Types Handled:</strong> <%= agency.wasteTypesHandled.join(', ') %></p>
                    <p><strong>Email:</strong> <%= agency.email %></p>
                    <p><strong>Phone:</strong> <%= agency.phone %></p>
                    <p><strong>Address:</strong> <%= agency.address %></p>
                    <p><strong>Region:</strong> <%= agency.region %></p>
                    <p><strong>Contact Person:</strong> <%= agency.contactPerson %></p>

                    <!-- Trade License -->
                    <p><strong>Trade License:</strong> 
                        <a href="<%= agency.documents.tradeLicense.url %>" target="_blank">View License</a>
                    </p>

                    <!-- PCB Authorization -->
                    <p><strong>PCB Authorization:</strong> 
                        <a href="<%= agency.documents.pcbAuth.url %>" target="_blank">View PCB Auth</a>
                    </p>

                    <div class="buttons">
                    <!-- Update Profile Button -->
                    <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#updateAgencyModal">
                        Edit Profile
                    </button>

                    <!-- Delete Profile Form -->
                    <form action="/agency/<%= agency._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete Profile</button>
                    </form>
                    </div>
                </div>
    </div>

    <!-- ✅ Update Agency Modal -->
    <div class="modal fade" id="updateAgencyModal" tabindex="-1" aria-labelledby="updateAgencyModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Agency Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/agency/<%= agency._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <!-- Logo -->
                        <div class="mb-3 text-center">
                            <label class="form-label">Current Logo</label><br>
                            <img id="profilePreview" src="<%= agency.logo.url %>" class="rounded-circle" width="120" height="120">
                            <input type="file" name="logo" class="form-control mt-2" accept="image/*" onchange="previewLogo(event)">
                        </div>

                        <!-- Trade License -->
                        <div class="mb-3">
                            <label class="form-label">Trade License (PDF)</label>
                            <input type="file" name="tradeLicense" class="form-control" accept=".pdf">
                        </div>

                        <!-- PCB Authorization -->
                        <div class="mb-3">
                            <label class="form-label">PCB Authorization (PDF)</label>
                            <input type="file" name="pcbAuth" class="form-control" accept=".pdf">
                        </div>

                        <!-- Other Fields -->
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" name="name" value="<%= agency.name %>" required>
                        </div>
                        <div class="mb-3">
                          <label class="form-label">Description</label>
                          <textarea class="form-control" name="description"><%= agency.description %> </textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input type="text" class="form-control" name="phone" value="<%= agency.phone %>" pattern="\d{10}" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Address</label>
                            <input type="text" class="form-control" name="address" value="<%= agency.address %>" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Region</label>
                            <input type="text" class="form-control" name="region" value="<%= agency.region %>">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Contact Person</label>
                            <input type="text" class="form-control" name="contactPerson" value="<%= agency.contactPerson %>">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Working Hours</label>
                            <input type="text" class="form-control" name="workingHours" value="<%= agency.workingHours %>">
                        </div>

                        <div class="mb-3">
                          <label for="wasteTypesHandled" class="form-label">Waste Types Handled:</label>
                          <select class="form-select" id="wasteTypesHandled" name="wasteTypesHandled" multiple>
                            <option value="mobile" <%= agency.wasteTypesHandled.includes("mobile") ? "selected" : "" %>>Mobile</option>
                            <option value="laptop" <%= agency.wasteTypesHandled.includes("laptop") ? "selected" : "" %>>Laptop</option>
                            <option value="computers" <%= agency.wasteTypesHandled.includes("computers") ? "selected" : "" %>>Computer</option>
                            <option value="Batteries" <%= agency.wasteTypesHandled.includes("Batteries") ? "selected" : "" %>>Batteries</option>
                            <option value="phones" <%= agency.wasteTypesHandled.includes("phones") ? "selected" : "" %>>Phones</option>
                          </select>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary w-100">Update Agency</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    <!-- ✅ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ Preview Logo Before Upload -->
    <script>
        function previewLogo(event) {
            const preview = document.getElementById("profilePreview");
            preview.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
</body>
</html>
