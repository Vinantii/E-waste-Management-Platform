<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Volunteer Management</h2>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addVolunteerModal">
                <i class="bi bi-plus-lg"></i> Add Volunteer
            </button>
        </div>

        <!-- Volunteer List -->
        <div class="row">
            <% volunteers.forEach(volunteer => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <img src="<%= volunteer.profilePic?.url || '/images/default-profile.png' %>" 
                                     class="rounded-circle me-3" 
                                     style="width: 50px; height: 50px; object-fit: cover;">
                                <div>
                                    <h5 class="card-title mb-0"><%= volunteer.name %></h5>
                                    <span class="badge <%= volunteer.status === 'Active' ? 'bg-success' : 'bg-secondary' %>">
                                        <%= volunteer.status %>
                                    </span>
                                </div>
                            </div>
                            <p class="card-text">
                                <i class="bi bi-envelope"></i> <%= volunteer.email %><br>
                                <i class="bi bi-telephone"></i> <%= volunteer.phone %><br>
                                <i class="bi bi-geo-alt"></i> <%= volunteer.address %><br>
                                <strong>Pickup Area:</strong><br>
                                <small>
                                    <%= volunteer.pickupArea.city %>, <%= volunteer.pickupArea.district %><br>
                                    PIN Codes: <%= volunteer.pickupArea.pinCodes.join(', ') %><br>
                                    <% if (volunteer.pickupArea.landmarks.length > 0) { %>
                                        Landmarks: <%= volunteer.pickupArea.landmarks.join(', ') %>
                                    <% } %>
                                </small>
                            </p>
                            <div class="mt-3">
                                <small class="text-muted">
                                    Assigned Requests: <%= volunteer.assignedRequests.length %>
                                </small>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-sm btn-outline-primary me-2" 
                                        onclick="toggleVolunteerStatus('<%= volunteer._id %>', '<%= volunteer.status %>')">
                                    <%= volunteer.status === 'Active' ? 'Deactivate' : 'Activate' %>
                                </button>
                                <button class="btn btn-sm btn-outline-danger"
                                        onclick="deleteVolunteer('<%= volunteer._id %>')">
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Add Volunteer Modal -->
        <div class="modal fade" id="addVolunteerModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add New Volunteer</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form action="/agency/volunteers" method="POST" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Phone</label>
                                <input type="tel" class="form-control" name="phone" pattern="\d{10}" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Address</label>
                                <textarea class="form-control" name="address" required></textarea>
                            </div>

                            <!-- New Pickup Area fields -->
                            <hr>
                            <h6 class="mb-3">Pickup Area Details</h6>
                            
                            <div class="mb-3">
                                <label class="form-label">City</label>
                                <input type="text" class="form-control" name="pickupArea[city]" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">District</label>
                                <input type="text" class="form-control" name="pickupArea[district]" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">PIN Codes (comma-separated)</label>
                                <input type="text" 
                                       class="form-control" 
                                       name="pickupArea[pinCodes]" 
                                       pattern="^\d{6}(,\s*\d{6})*$" 
                                       placeholder="e.g., 400001, 400002" 
                                       required>
                                <small class="text-muted">Enter 6-digit PIN codes separated by commas</small>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Landmarks (comma-separated)</label>
                                <input type="text" 
                                       class="form-control" 
                                       name="pickupArea[landmarks]" 
                                       placeholder="e.g., City Mall, Central Park">
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <label class="form-label">Latitude</label>
                                    <input type="number" 
                                           class="form-control" 
                                           name="pickupArea[coordinates][coordinates][1]" 
                                           step="any" 
                                           required>
                                </div>
                                <div class="col">
                                    <label class="form-label">Longitude</label>
                                    <input type="number" 
                                           class="form-control" 
                                           name="pickupArea[coordinates][coordinates][0]" 
                                           step="any" 
                                           required>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Profile Picture</label>
                                <input type="file" class="form-control" name="profilePic" accept="image/*">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Add Volunteer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleVolunteerStatus(volunteerId, currentStatus) {
            const newStatus = currentStatus === 'Active' ? 'Inactive' : 'Active';
            fetch(`/agency/volunteers/${volunteerId}/toggle-status`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ status: newStatus })
            }).then(() => window.location.reload());
        }

        function deleteVolunteer(volunteerId) {
            if (confirm('Are you sure you want to delete this volunteer?')) {
                fetch(`/agency/volunteers/${volunteerId}`, {
                    method: 'DELETE'
                }).then(() => window.location.reload());
            }
        }
    </script>
</body>
</html> 