<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Afacad:ital,wght@0,400..700;1,400..700&family=Anek+Latin:wght@100..800&family=Manrope:wght@200..800&family=Michroma&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/styles/agency/volunteer.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="background">
        <div class="container">
            <h2 class="page-title">Volunteer Management</h2>
            <button class="add-volunteer-btn" data-bs-toggle="modal" data-bs-target="#addVolunteerModal">
                + Add Volunteer
            </button>

            <div class="volunteer-grid">
                <% volunteers.forEach(volunteer => { %>
                    <div class="volunteer-card">
                        <div class="profile-section">
                            <div class="profile-pic">
                                <img src="<%= volunteer.profilePic?.url || '/images/default-profile.png' %>" 
                                     alt="Profile"
                                     style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;">
                            </div>
                            <div>
                                <div class="volunteer-name"><%= volunteer.name %></div>
                                <span class="status-badge">
                                    <%= volunteer.status %>
                                </span>
                            </div>
                        </div>

                        <div class="contact-info">
                            <div class="info-item">
                                <i class="fas fa-envelope"></i>
                                <%= volunteer.email %>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-phone"></i>
                                <%= volunteer.phone %>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <%= volunteer.address %>
                            </div>
                        </div>

                        <div class="pickup-area">
                            <div class="pickup-area-title">Pick Area</div>
                            <div class="area-details">
                                <%= volunteer.pickupArea.city %><br>
                                PinCode: <%= volunteer.pickupArea.pinCodes[0] %><br>
                                Landmark: <%= volunteer.pickupArea.landmarks[0] || 'Near Dmart' %>
                            </div>
                        </div>

                        <div class="assigned-requests">
                            Assigned Request: <%= volunteer.assignedRequests.length %>
                        </div>

                        <div class="action-buttons">
                            <button class="deactivate-btn" 
                                    onclick="toggleVolunteerStatus('<%= volunteer._id %>', '<%= volunteer.status %>')">
                                Deactivate
                            </button>
                            <button class="delete-btn"
                                    onclick="deleteVolunteer('<%= volunteer._id %>')">
                                Delete
                            </button>
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- Add Volunteer Modal -->
            <div class="modal fade" id="addVolunteerModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Add New Volunteer</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <form action="/agency/volunteers" method="POST" enctype="multipart/form-data">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <input type="text" class="form-control" name="name" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" name="email" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Phone</label>
                                    <input type="tel" class="form-control" name="phone" pattern="\d{10}" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Address</label>
                                    <textarea class="form-control" name="address" required></textarea>
                                </div>

                                <!-- New Pickup Area fields -->
                                <hr>
                                <h6 class="mb-3">Pickup Area Details</h6>
                                
                                <div class="mb-3">
                                    <label class="form-label">City</label>
                                    <input type="text" class="form-control" name="pickupArea[city]" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">District</label>
                                    <input type="text" class="form-control" name="pickupArea[district]" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">PIN Codes (comma-separated)</label>
                                    <input type="text" 
                                           class="form-control" 
                                           name="pickupArea[pinCodes]" 
                                           pattern="^\d{6}(,\s*\d{6})*$" 
                                           placeholder="e.g., 400001, 400002" 
                                           required>
                                    <small class="text-muted">Enter 6-digit PIN codes separated by commas</small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Landmarks (comma-separated)</label>
                                    <input type="text" 
                                           class="form-control" 
                                           name="pickupArea[landmarks]" 
                                           placeholder="e.g., City Mall, Central Park">
                                </div>
                                <div class="row mb-3">
                                    <div class="col">
                                        <label class="form-label">Latitude</label>
                                        <input type="number" 
                                               class="form-control" 
                                               name="pickupArea[coordinates][coordinates][1]" 
                                               step="any" 
                                               required>
                                    </div>
                                    <div class="col">
                                        <label class="form-label">Longitude</label>
                                        <input type="number" 
                                               class="form-control" 
                                               name="pickupArea[coordinates][coordinates][0]" 
                                               step="any" 
                                               required>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Profile Picture</label>
                                    <input type="file" class="form-control" name="profilePic" accept="image/*">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Password</label>
                                    <input type="password" 
                                           class="form-control" 
                                           name="password" 
                                           required 
                                           minlength="6"
                                           placeholder="Set password for volunteer login">
                                    <small class="text-muted">Minimum 6 characters</small>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Add Volunteer</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleVolunteerStatus(volunteerId, currentStatus) {
            const newStatus = currentStatus === 'Active' ? 'Inactive' : 'Active';
            fetch(`/agency/volunteers/${volunteerId}/toggle-status`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ status: newStatus })
            }).then(() => window.location.reload());
        }

        function deleteVolunteer(volunteerId) {
            if (confirm('Are you sure you want to delete this volunteer?')) {
                fetch(`/agency/volunteers/${volunteerId}`, {
                    method: 'DELETE'
                }).then(() => window.location.reload());
            }
        }
    </script>
</body>
</html> 