<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-Waste Platform</title>
    <style>
      .options {
        border: 2px solid black;
        padding: 10px;
        margin: 50px;
      }
      .options a {
        font-size: 18px;
        color: black;
        padding: 10px;
        margin: 50px;
      }
      .highlight {
          color: rgb(252, 239, 2);
          font-weight: bold;
          font-size: 1.2em;
        }
    </style>
        <!-- Bootstrap CDN -->
        <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
        rel="stylesheet"
      />  
  </head>
  <body>
    <h1>Welcome to the platform</h1>
    <div class="options">
      <a href="/register/user">Signup</a>
      <a href="/login">Login</a>
      <a href="/register/agency">Register Agency</a>
    </div>

    <div class="container">
      <h1> All Feedback</h1>
      <div class="row">
        <% feedbacks.forEach(feedback => { %>
          <div class="card shadow-lg p-3 border-0 rounded-4" style="max-width: 400px;">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <img src="<%= feedback.user.profilePic.url %>" alt="Profile Picture" class="rounded-circle me-2" width="40" height="40">
                    <div>
                        <h5 class="mb-0 fw-bold"><%= feedback.user.name%></h5>
                        <div class="text-warning">
                            <%= feedback.rating %> Stars
                        </div>
                    </div>
                </div>
                <p class="mt-3 text-secondary"><%=feedback.content%></p>
                <small class="text-muted"><%= feedback.createdAt.toDateString() %></small>
            </div>
        </div>
        <% }); %>
    </div>

    <div class="container mt-5">
      <h2 class="text-center mb-4">E-Waste Facts</h2>
      <div class="row">
        <% facts.forEach(fact => { %>
          <div class="col-md-4">
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <p class="card-text"><%- fact.fact %></p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
