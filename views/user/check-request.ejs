<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Afacad:ital,wght@0,400..700;1,400..700&family=Anek+Latin:wght@100..800&family=Manrope:wght@200..800&family=Michroma&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/styles/user/check-request.css">
  </head>
  <body>
    <div class="background">
      <img src="/images/logo.png" alt="logo" id="logo">
    <div class="container">
      <h2 class="mb-4">My Requests</h2>

      <!-- Request Type Tabs -->
      <ul class="nav nav-tabs mb-4" role="tablist">
        <li class="nav-item">
          <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#current">Current Requests</button>
        </li>
        <li class="nav-item">
          <button class="nav-link" data-bs-toggle="tab" data-bs-target="#old">Old Requests</button>
        </li>
      </ul>

      <!-- Tab Content -->
      <div class="tab-content">
        <!-- Current Requests Tab -->
        <div class="tab-pane fade show active" id="current">
          <% const currentRequests = requests.filter(req => !req.status.includes('Completed') && !req.status.includes('Rejected')); %>
          <% if(currentRequests.length > 0){ %>
            <% currentRequests.forEach(request => { %>
              <div class="request-card">
                <div class="d-flex justify-content-between align-items-start mb-3">
                  <div>
                    <h5 class="mb-2">Request #<%= request._id.toString().slice(-6) %></h5>
                  </div>
                  <span class="status-badge <%= request.status === 'Pending' ? 'pending' : request.status === 'Processing' ? 'processing' : 'completed' %>"><%= request.status %> </span>
                </div>
                <div class="request-info">
                  <div class="info-item">
                    <span class="info-label">Waste Type :</span>
                    <span class="info-value"><%= request.wasteType.join(', ') %></span>
                  </div>
                  <div class="info-item">
                    <span class="info-label">Quantity :</span>
                    <span class="info-value"><%= request.quantities %></span>
                  </div>
                  <div class="info-item">
                    <span class="info-label">Agency :</span>
                    <span class="info-value"><%= request.agency.name %></span>
                  </div>
                </div>
                <div class="request-actions">
                  <a href="/user/request/<%= request._id %>/track" class="view-details-btn">View Details</a>
                </div>
                <div class="request-actions">
                  <% if(request.status === "Pending" || request.status === "Accepted" || request.status === "Assigned" && request.trackingMilestones.pickupStarted.completed === false){ %>
                    <form action="/user/request/<%= request._id %>/delete?_method=DELETE" method="post"><button class="btn btn-danger">Delete request</button></form>
                  <% } %>
                </div>
              </div>
            <% }); %>
          <% }else{ %>
            <p class="card-title"> No requests currently available.</p>
          <% } %>
        </div>

        <!-- Old Requests Tab -->
        <div class="tab-pane fade" id="old">
          <% const oldRequests = requests.filter(req => req.status.includes('Completed') || req.status.includes('Rejected')); %>
          <% if(oldRequests.length > 0){ %>
            <% oldRequests.forEach(request => { %>
              <div class="request-card">
                <div class="d-flex justify-content-between align-items-start mb-3">
                  <div>
                    <h5 class="mb-2">Request #<%= request._id.toString().slice(-6) %></h5>
                  </div>
                  <span class="status-badge <%= request.status === 'Completed' ? 'completed' : 'rejected' %>">
                    <%= request.status %>
                  </span>
                </div>
                <div class="request-info">
                  <div class="info-item">
                    <span class="info-label">Waste Type :</span>
                    <span class="info-value"><%= request.wasteType.join(', ') %></span>
                  </div>
                  <div class="info-item">
                    <span class="info-label">Quantity :</span>
                    <span class="info-value"><%= request.quantities %></span>
                  </div>
                  <div class="info-item">
                    <span class="info-label">Agency :</span>
                    <span class="info-value"><%= request.agency.name %></span>
                  </div>
                  <div class="info-item">
                    <span class="info-label">Completed On :</span>
                    <span class="info-value"><%= new Date(request.updatedAt).toLocaleDateString() %></span>
                  </div>
                </div>
                <div class="request-actions">
                  <a href="/user/request/<%= request._id %>/track" class="view-details-btn">View Details</a>
                </div>
              </div>
            <% }); %>
            <% }else{ %>
              <p class="card-title"> No old requests available.</p>
            <% } %>
        </div>

      </div>
    </div>
  </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
