<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center mb-4">My Orders</h2>
        <ul class="nav nav-tabs" id="orderTabs" role="tablist">
            <% ["Pending", "Shipped", "Delivered", "Rejected"].forEach((status, index) => { %>
                <li class="nav-item" role="presentation">
                    <button class="nav-link <%= index === 0 ? 'active' : '' %>" id="<%= status %>-tab" data-bs-toggle="tab" data-bs-target="#<%= status %>" type="button" role="tab">
                        <%= status %>
                    </button>
                </li>
            <% }); %>
        </ul>
        
        <div class="tab-content mt-3" id="orderTabsContent">
            <% ["Pending", "Shipped", "Delivered", "Rejected"].forEach((status, index) => { %>
                <div class="tab-pane fade <%= index === 0 ? 'show active' : '' %>" id="<%= status %>" role="tabpanel">
                    <div class="row">
                        <% allOrders.filter(order => 
                            (status === "Pending" && (order.status === "Pending" || order.status === "Accepted")) || 
                            (status !== "Pending" && order.status === status)
                        ).forEach(order => { %>
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">Order ID: <%= order._id %></h5>
                                        <p class="card-text">Product: <%= order.product.name %></p>
                                        <p class="card-text">Agency: <%= order.agency.name %></p>
                                        <p class="text-muted">Created At: <%= order.createdAt.toDateString() %></p>
                                        <% if(order.status === "Pending"){ %>
                                            <form action="/user/<%= order.user._id %>/cancel/<%= order._id %>?_method=DELETE" method="POST">
                                                <button class="btn btn-danger">Cancel Order</button>
                                            </form>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% }); %>
        </div>
        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>