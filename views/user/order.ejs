<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Afacad:ital,wght@0,400..700;1,400..700&family=Albert+Sans:ital,wght@0,100..900;1,100..900&family=Anek+Latin:wght@100..800&family=Manrope:wght@200..800&family=Michroma&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100..900;1,100..900&family=Teachers:ital,wght@0,400..800;1,400..800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/styles/user/order.css">
</head>

<body>
    <div class="background">
        <img src="/images/logo.png" alt="logo" id="logo">
        <div class="container mt-4">
            <h2 class="text-center mb-4">My Orders</h2>
            <ul class="nav nav-tabs" id="orderTabs" role="tablist">
                <% ["Pending", "Shipped" , "Delivered" , "Rejected" ].forEach((status, index)=> { %>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link <%= index === 0 ? 'active' : '' %>" id="<%= status %>-tab"
                            data-bs-toggle="tab" data-bs-target="#<%= status %>" type="button" role="tab">
                            <%= status %>
                        </button>
                    </li>
                    <% }); %>
            </ul>

            <div class="tab-content mt-3" id="orderTabsContent">
                <% if (allOrders && allOrders.length > 0) { %>
                    <% ["Pending", "Shipped" , "Delivered" , "Rejected" ].forEach((status, index)=> { %>
                        <div class="tab-pane fade <%= index === 0 ? 'show active' : '' %>" id="<%= status %>" role="tabpanel">
                            <div class="row">
                                <% allOrders.filter(order=>(status === "Pending" && (order.status === "Pending" || order.status === "Accepted")) ||(status !== "Pending" && order.status === status)).forEach(order => { %>
                                    <div class="col-md-4 mb-4">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">Order ID: <%= order._id %>
                                                </h5>
                                                <p class="card-text">Product: <%= order.product.name %>
                                                </p>
                                                <p class="card-text">Agency: <%= order.agency.name %>
                                                </p>
                                                <p class="text-muted">Created At: <%= order.createdAt.toDateString() %>
                                                </p>
                                                <% if(order.status==="Pending" ){ %>
                                                    <form
                                                        action="/user/<%= order.user._id %>/cancel/<%= order._id %>?_method=DELETE"
                                                        method="POST">
                                                        <button class="btn btn-danger">Cancel Order</button>
                                                    </form>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    <% }); %>
                <% }else{ %>
                        <p>No orders available</p>
                <% } %>
            </div>

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>