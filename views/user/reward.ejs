<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rewards Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .stats-card {
            background: linear-gradient(45deg, #3498db, #2980b9);
            color: white;
            border-radius: 15px;
            transition: transform 0.3s;
        }
        .stats-card:hover {
            transform: translateY(-5px);
        }
        .leaderboard-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .rank-1 { background-color: #ffd700; }
        .rank-2 { background-color: #c0c0c0; }
        .rank-3 { background-color: #cd7f32; }
        .rank-badge {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
        }
        .points-badge {
            background: #28a745;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Rewards Dashboard</h2>
        
        <!-- User Stats -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stats-card p-4 h-100">
                    <h3 class="mb-3">Your Stats</h3>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-trophy-fill me-2"></i>
                        <h4 class="mb-0">Points: <%= user.points %></h4>
                    </div>
                    <p class="mb-2">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        Completed Requests: <%= user.completedRequests %>
                    </p>
                    <p class="mb-0">
                        <i class="bi bi-arrow-repeat me-2"></i>
                        Total Requests: <%= user.requests.length %>
                    </p>
                </div>
            </div>
            
            <!-- Points Info -->
            <div class="col-md-8">
                <div class="card h-100">
                    <div class="card-body">
                        <h4>How to Earn Points</h4>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Complete a Request
                                <span class="points-badge">+100 points</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Reach #1 on Leaderboard
                                <span class="points-badge">+1000 points</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Reach #2 on Leaderboard
                                <span class="points-badge">+750 points</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Reach #3 on Leaderboard
                                <span class="points-badge">+500 points</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Leaderboard -->
        <div class="leaderboard-card p-4">
            <h3 class="mb-4">Leaderboard</h3>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>User</th>
                            <th>Points</th>
                            <th>Completed Requests</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% topUsers.forEach((topUser, index) => { %>
                            <tr class="<%= topUser._id.equals(user._id) ? 'table-active' : '' %>">
                                <td>
                                    <div class="rank-badge rank-<%= index + 1 %>">
                                        <%= index + 1 %>
                                    </div>
                                </td>
                                <td>
                                    <%= topUser.name %>
                                    <%= topUser._id.equals(user._id) ? '(You)' : '' %>
                                </td>
                                <td><%= topUser.points %></td>
                                <td><%= topUser.completedRequests %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
