<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Afacad:ital,wght@0,400..700;1,400..700&family=Anek+Latin:wght@100..800&family=Manrope:wght@200..800&family=Michroma&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/styles/volunteer/dashboard.css">
</head>
<body>
    <div class="container mt-4">
        <!-- Profile Section -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="profile-section">
                    <div class="d-flex align-items-center mb-3">
                        <img src="<%= volunteer.profilePic?.url || '/images/default-profile.png' %>" 
                             class="rounded-circle me-3" 
                             style="width: 80px; height: 80px; object-fit: cover;">
                        <div>
                            <h4 class="mb-0"><%= volunteer.name %></h4>
                            <span class="badge <%= volunteer.status === 'Active' ? 'bg-success' : 'bg-secondary' %>">
                                <%= volunteer.status %>
                            </span>
                        </div>
                    </div>
                    <p class="mb-2"><i class="bi bi-envelope"></i> <%= volunteer.email %></p>
                    <p class="mb-2"><i class="bi bi-telephone"></i> <%= volunteer.phone %></p>
                    <p class="mb-2"><i class="bi bi-geo-alt"></i> <%= volunteer.address %></p>
                    <hr>
                    <h6>Pickup Area Details:</h6>
                    <p class="mb-1">City: <%= volunteer.pickupArea.city %></p>
                    <p class="mb-1">District: <%= volunteer.pickupArea.district %></p>
                    <p class="mb-1">PIN Codes: <%= volunteer.pickupArea.pinCodes.join(', ') %></p>
                    <% if (volunteer.pickupArea.landmarks.length > 0) { %>
                        <p class="mb-1">Landmarks: <%= volunteer.pickupArea.landmarks.join(', ') %></p>
                    <% } %>
                </div>
            </div>

            <!-- Assigned Requests Section -->
            <div class="col-md-8">
                <h3>Assigned Requests</h3>
                <ul class="nav nav-tabs mb-3" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#pending">
                            Pending Pickups
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#completed">
                            Completed
                        </button>
                    </li>
                </ul>

                <div class="tab-content">
                    <!-- Pending Requests Tab -->
                    <div class="tab-pane fade show active" id="pending">
                        <% if (volunteer.assignedRequests && volunteer.assignedRequests.length > 0) { %>
                            <% volunteer.assignedRequests.filter(req => req && req.status == 'Assigned').forEach(request => { %>
                                <% if (request) { %>
                                    <div class="card request-card mb-3">
                                        <div class="card-body">
                                            <span class="badge bg-primary status-badge"><%= request.status %></span>
                                            <h5 class="card-title">Request #<%= request._id.toString().slice(-6) %></h5>
                                            <p class="card-text">
                                                <strong>Waste Types:</strong> <%= request.wasteType ? request.wasteType.join(', ') : 'N/A' %><br>
                                                <strong>Quantity:</strong> <%= request.quantity || 'N/A' %><br>
                                                <strong>Pickup Address:</strong> <%= request.pickupAddress || 'N/A' %><br>
                                                <strong>Contact:</strong> <%= request.contactNumber || 'N/A' %>
                                            </p>
                                            <form action="/volunteer/request/<%= request._id %>/update-status" method="POST" class="mt-3">
                                                <div class="mb-3">
                                                    <label class="form-label">Update Status</label>
                                                    <select class="form-select" name="milestone" required>
                                                        <option value="">Select milestone to update</option>
                                                        <% if (!request.trackingMilestones.pickupScheduled?.completed) { %>
                                                            <option value="pickupScheduled">Schedule Pickup</option>
                                                        <% } else if (request.trackingMilestones.pickupScheduled?.completed && !request.trackingMilestones.pickupStarted?.completed) { %>
                                                            <option value="pickupStarted">Start Pickup</option>
                                                        <% } else if (request.trackingMilestones.pickupStarted?.completed && !request.trackingMilestones.pickupCompleted?.completed) { %>
                                                            <option value="pickupCompleted">Complete Pickup</option>
                                                        <% } %>
                                                    </select>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Notes (optional)</label>
                                                    <textarea class="form-control" name="notes" rows="2" placeholder="Add any relevant notes"></textarea>
                                                </div>
                                                <input type="hidden" name="latitude" id="latitude-<%= request._id %>">
                                                <input type="hidden" name="longitude" id="longitude-<%= request._id %>">
                                                <button type="submit" class="btn btn-primary" onclick="return getLocation('<%= request._id %>')">
                                                    Update Status
                                                </button>
                                            </form>
                                            <button onclick="openGoogleMaps('<%= request.pickupLocation.coordinates[1] %>,<%= request.pickupLocation.coordinates[0] %>')">View Route</button>
                                        </div>
                                    </div>
                                <% } %>
                            <% }); %>
                        <% } else { %>
                            <p>No pending requests assigned.</p>
                        <% } %>
                    </div>

                    <!-- Completed Requests Tab -->
                    <div class="tab-pane fade" id="completed">
                        <% if (volunteer.assignedRequests && volunteer.assignedRequests.length > 0) { %>
                            <% volunteer.assignedRequests.filter(req => req && req.status === 'Completed').forEach(request => { %>
                                <% if (request) { %>
                                    <div class="card request-card mb-3">
                                        <div class="card-body">
                                            <span class="badge bg-success status-badge">Completed</span>
                                            <h5 class="card-title">Request #<%= request._id.toString().slice(-6) %></h5>
                                            <p class="card-text">
                                                <strong>Waste Types:</strong> <%= request.wasteType ? request.wasteType.join(', ') : 'N/A' %><br>
                                                <strong>Quantity:</strong> <%= request.quantity || 'N/A' %><br>
                                                <strong>Pickup Address:</strong> <%= request.pickupAddress || 'N/A' %><br>
                                                <strong>Completed On:</strong> <%= request.updatedAt ? new Date(request.updatedAt).toLocaleDateString() : 'N/A' %>
                                            </p>
                                        </div>
                                    </div>
                                <% } %>
                            <% }); %>
                        <% } else { %>
                            <p>No completed requests yet.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Logout Button -->
        <div class="text-center mt-4">
            <a href="/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    function getLocation(requestId) {
        if (!navigator.geolocation) {
            alert('Geolocation is not supported by your browser');
            return false;
        }

        navigator.geolocation.getCurrentPosition(
            (position) => {
                document.getElementById(`latitude-${requestId}`).value = position.coords.latitude;
                document.getElementById(`longitude-${requestId}`).value = position.coords.longitude;
                document.querySelector(`form[action="/volunteer/request/${requestId}/update-status"]`).submit();
            },
            (error) => {
                alert('Unable to get location. Please enable location services.');
                return false;
            }
        );
        return false;
    }
    function openGoogleMaps(destination) {
        if (!navigator.geolocation) {
            alert("Geolocation is not supported by your browser");
            return;
        }

        navigator.geolocation.getCurrentPosition(
            (position) => {
                let latitude = position.coords.latitude;
                let longitude = position.coords.longitude;

                // Construct Google Maps URL with valid coordinates
                const mapsURL = `https://www.google.com/maps/dir/?api=1&origin=${latitude},${longitude}&destination=${destination}`;
                window.open(mapsURL, "_blank");
            },
            (error) => {
                alert("Unable to get location. Please enable location services.");
            }
        );
    }
    </script>
</body>
</html> 