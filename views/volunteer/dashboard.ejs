<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .request-card {
            transition: all 0.3s ease;
        }
        .request-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .profile-section {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
        }
        .status-badge {
            position: absolute;
            top: 10px;
            right: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Profile Section -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="profile-section">
                    <div class="d-flex align-items-center mb-3">
                        <img src="<%= volunteer.profilePic?.url || '/images/default-profile.png' %>" 
                             class="rounded-circle me-3" 
                             style="width: 80px; height: 80px; object-fit: cover;">
                        <div>
                            <h4 class="mb-0"><%= volunteer.name %></h4>
                            <span class="badge <%= volunteer.status === 'Active' ? 'bg-success' : 'bg-secondary' %>">
                                <%= volunteer.status %>
                            </span>
                        </div>
                    </div>
                    <p class="mb-2"><i class="bi bi-envelope"></i> <%= volunteer.email %></p>
                    <p class="mb-2"><i class="bi bi-telephone"></i> <%= volunteer.phone %></p>
                    <p class="mb-2"><i class="bi bi-geo-alt"></i> <%= volunteer.address %></p>
                    <hr>
                    <h6>Pickup Area Details:</h6>
                    <p class="mb-1">City: <%= volunteer.pickupArea.city %></p>
                    <p class="mb-1">District: <%= volunteer.pickupArea.district %></p>
                    <p class="mb-1">PIN Codes: <%= volunteer.pickupArea.pinCodes.join(', ') %></p>
                    <% if (volunteer.pickupArea.landmarks.length > 0) { %>
                        <p class="mb-1">Landmarks: <%= volunteer.pickupArea.landmarks.join(', ') %></p>
                    <% } %>
                </div>
            </div>

            <!-- Assigned Requests Section -->
            <div class="col-md-8">
                <h3>Assigned Requests</h3>
                <ul class="nav nav-tabs mb-3" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#pending">
                            Pending Pickups
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#completed">
                            Completed
                        </button>
                    </li>
                </ul>

                <div class="tab-content">
                    <!-- Pending Requests Tab -->
                    <div class="tab-pane fade show active" id="pending">
                        <% if (volunteer.assignedRequests && volunteer.assignedRequests.length > 0) { %>
                            <% volunteer.assignedRequests.filter(req => req && req.status == 'Assigned').forEach(request => { %>
                                <% if (request) { %>
                                    <div class="card request-card mb-3">
                                        <div class="card-body">
                                            <span class="badge bg-primary status-badge"><%= request.status %></span>
                                            <h5 class="card-title">Request #<%= request._id.toString().slice(-6) %></h5>
                                            <p class="card-text">
                                                <strong>Waste Types:</strong> <%= request.wasteType ? request.wasteType.join(', ') : 'N/A' %><br>
                                                <strong>Quantity:</strong> <%= request.quantity || 'N/A' %><br>
                                                <strong>Pickup Address:</strong> <%= request.pickupAddress || 'N/A' %><br>
                                                <strong>Contact:</strong> <%= request.contactNumber || 'N/A' %>
                                            </p>
                                            <form action="/volunteer/request/<%= request._id %>/update-status" method="POST" class="mt-3">
                                                <div class="mb-3">
                                                    <label class="form-label">Update Status</label>
                                                    <select class="form-select" name="milestone" required>
                                                        <option value="">Select milestone to update</option>
                                                        <% if (!request.trackingMilestones.pickupScheduled?.completed) { %>
                                                            <option value="pickupScheduled">Schedule Pickup</option>
                                                        <% } else if (request.trackingMilestones.pickupScheduled?.completed && 
                                                                     !request.trackingMilestones.pickupStarted?.completed) { %>
                                                            <option value="pickupStarted">Start Pickup</option>
                                                        <% } else if (request.trackingMilestones.pickupStarted?.completed && 
                                                                     !request.trackingMilestones.pickupCompleted?.completed) { %>
                                                            <option value="pickupCompleted">Complete Pickup</option>
                                                        <% } %>
                                                    </select>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Notes (optional)</label>
                                                    <textarea class="form-control" name="notes" rows="2" placeholder="Add any relevant notes"></textarea>
                                                </div>
                                                <button type="submit" class="btn btn-primary">Update Status</button>
                                            </form>
                                        </div>
                                    </div>
                                <% } %>
                            <% }); %>
                        <% } else { %>
                            <p>No pending requests assigned.</p>
                        <% } %>
                    </div>

                    <!-- Completed Requests Tab -->
                    <div class="tab-pane fade" id="completed">
                        <% if (volunteer.assignedRequests && volunteer.assignedRequests.length > 0) { %>
                            <% volunteer.assignedRequests.filter(req => req && req.status === 'Completed').forEach(request => { %>
                                <% if (request) { %>
                                    <div class="card request-card mb-3">
                                        <div class="card-body">
                                            <span class="badge bg-success status-badge">Completed</span>
                                            <h5 class="card-title">Request #<%= request._id.toString().slice(-6) %></h5>
                                            <p class="card-text">
                                                <strong>Waste Types:</strong> <%= request.wasteType ? request.wasteType.join(', ') : 'N/A' %><br>
                                                <strong>Quantity:</strong> <%= request.quantity || 'N/A' %><br>
                                                <strong>Pickup Address:</strong> <%= request.pickupAddress || 'N/A' %><br>
                                                <strong>Completed On:</strong> <%= request.updatedAt ? new Date(request.updatedAt).toLocaleDateString() : 'N/A' %>
                                            </p>
                                        </div>
                                    </div>
                                <% } %>
                            <% }); %>
                        <% } else { %>
                            <p>No completed requests yet.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Logout Button -->
        <div class="text-center mt-4">
            <a href="/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 